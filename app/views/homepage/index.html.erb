<div class="main">
  <div class="content">
    <h1>Pools</h1>


    <% @locations.each do |location| %>
      <h2><%= location.name %></h2>
      <table class="pure-table pure-table-striped">
        <thead>
          <tr>
            <th>Activity</th>
            <th>From</th>
            <th>To</th>
          </tr>
        </thead>
        <tbody>
        <% location.schedule.where("time_to < ?", Time.now + 2.days).order(time_from: :asc).each do |t| %>
          <tr>
            <td><%= t[:activity] %></td>
            <td><%= t[:time_from].strftime("%F %H:%M") %></td>
            <td><%= t[:time_to].strftime("%F %H:%M") %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>